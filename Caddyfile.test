{
    email admin@divestreams.com
    on_demand_tls {
        ask http://app:3000/api/health
    }
}

(security_headers) {
    header {
        X-Content-Type-Options nosniff
        Referrer-Policy strict-origin-when-cross-origin
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Permissions-Policy "camera=(), microphone=(), geolocation=()"
        -Server
    }
}

test.divestreams.com {
    reverse_proxy app:3000
    encode gzip

    import security_headers

    header {
        X-Frame-Options DENY
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' https: data:; connect-src 'self' https://api.stripe.com; frame-ancestors 'none'"
    }

    log {
        output file /var/log/caddy/access.log
        format json
    }
}

*.test.divestreams.com {
    tls {
        on_demand
    }

    encode gzip

    import security_headers

    header {
        X-Frame-Options SAMEORIGIN
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' https: data:; connect-src 'self' https://api.stripe.com; frame-ancestors 'none'"
    }

    handle /embed/* {
        header -X-Frame-Options
        header Content-Security-Policy "frame-ancestors *"
        reverse_proxy app:3000
    }

    reverse_proxy app:3000

    log {
        output file /var/log/caddy/access.log
        format json
    }
}
